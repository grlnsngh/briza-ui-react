{
  "name": "briza-ui-react",
  "version": "0.3.0",
  "description": "A modern React UI component library built with TypeScript and Vite",
  "type": "module",
  "main": "./dist/briza-ui-react.umd.js",
  "module": "./dist/briza-ui-react.es.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/briza-ui-react.es.js",
      "require": "./dist/briza-ui-react.umd.js"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "react",
    "ui",
    "components",
    "library",
    "briza"
  ],
  "author": "Gurleen Singh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/grlnsngh/briza-ui-react"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc -b tsconfig.build.json && vite build",
    "test": "vitest",
    "test:a11y": "vitest --run --config vite.config.ts --project unit",
    "test:ci": "vitest --run --coverage --project unit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "lint:a11y": "eslint . --ext ts,tsx --config eslint.config.js",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "publish-beta": "npm version prerelease --preid=beta --no-git-tag-version && npm run build && npm publish --tag beta",
    "publish-latest": "npm version minor --no-git-tag-version && npm run build && npm publish"
  },
  "dependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.2",
    "@chromatic-com/storybook": "^4.1.1",
    "@eslint/js": "^9.33.0",
    "@storybook/addon-a11y": "^9.1.5",
    "@storybook/addon-docs": "^9.1.5",
    "@storybook/addon-links": "^9.1.7",
    "@storybook/addon-onboarding": "^9.1.5",
    "@storybook/addon-themes": "^9.1.5",
    "@storybook/addon-vitest": "^9.1.5",
    "@storybook/react-vite": "^9.1.5",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.33.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-storybook": "^9.1.5",
    "globals": "^16.3.0",
    "jest-axe": "^10.0.0",
    "jsdom": "^27.0.0",
    "playwright": "^1.55.0",
    "storybook": "^9.1.5",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vite-plugin-css-injected-by-js": "^3.5.2",
    "vitest": "^3.2.4"
  }
}
